                          		<apex:selectOptions value="{!programs}"/>
                                </apex:selectList>
                                
                    </td>
                    <td width="800px">
                        <div id='calendar'></div>
                    </td>
                    <apex:outputPanel id="panel"></apex:outputPanel>
                </tr>
            </table>
    </apex:form>
    
